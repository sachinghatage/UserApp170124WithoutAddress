@page
@model UserApplication.Pages.User.SingleUserModel
@{
}

<h2>User details</h2>

<div>
<form method="get">
    <label>User Id</label>
    <input type="text" name="Id" />
    <button  class="btn btn-primary" type="submit">Get User</button>
</form>
</div>

<div class="mt-5">
    <form>
        <div class="row mb-3">
            <div class="col-sm-3">
            <label>Name</label>
            <input type="text" class="form-control" value="@Model.user.Name"/>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-sm-3">
            <label>Email</label>
            <input type="email" class="form-control" value="@Model.user.Email" />
            </div>
        </div>
        <div class="row mb-3">
                <div class="col-sm-3">
            <label>Phone</label>
            <input type="number" class="form-control" value="@Model.user.Phone" />
            </div>
        </div>
       
    </form>

</div>