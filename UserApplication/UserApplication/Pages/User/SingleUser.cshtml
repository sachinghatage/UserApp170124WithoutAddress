@page
@model UserApplication.Pages.User.SingleUserModel
@{
}

<h2>User details</h2>

<div>
<form method="get">
    <label>User Id</label>
    <input type="text" name="Id" />
    <button  class="btn btn-primary" type="submit">Get User</button>
</form>
</div>

<div class="mt-5">
    <form>
        <div class="row mb-3">
            <div class="col-sm-3">
            <label>Name</label>
            </div>
            <div class="col-sm-3">
            <input type="text" class="form-control" value="@Model.user.Name"/>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-sm-3">
            <label>Email</label>
            </div>
            <div class="col-sm-3">
            <input type="email" class="form-control" value="@Model.user.Email" />
            </div>
        </div>
        <div class="row mb-3">
                <div class="col-sm-3">
                   <label>Phone</label>
                 </div>
            <div class="col-sm-3">
                <input type="number" class="form-control" value="@Model.user.Phone" />
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-sm-3">
                <label>Gender</label>
                </div>
            <div class="col-sm-3">
                <input type="text" class="form-control" value="@Model.user.UserGender" />
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-sm-3">
                <label>City</label>
                </div>
            <div class="col-sm-3">
                <input type="text" class="form-control" value="@Model.user.City" />
            </div>
        </div>

        <fieldset>
            <legend>Address</legend>
        <div class="row mb-3">
            <div class="col-sm-3">
                <label>State</label>
                </div>
            <div class="col-sm-3">
                <input type="text" class="form-control" value="@Model.user.State" />
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-sm-3">
                <label>Country</label>
                </div>
            <div class="col-sm-3">
                <input type="text" class="form-control" value="@Model.user.Country" />
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-sm-3">
                <label>Street</label>
                </div>
            <div class="col-sm-3">
                <input type="text" class="form-control" value="@Model.user.Street" />
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-sm-3">
                <label>Postal Code</label>
                </div>
            <div class="col-sm-3">
                <input type="text" class="form-control" value="@Model.user.PostalCode" />
            </div>
        </div>
        </fieldset>
    </form>

</div>